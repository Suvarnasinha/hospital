<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Medication Form</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      min-height: 100vh;
    }

    h1 {
      color: #333;
    }

    .form-container {
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin: 20px 0;
      width: 80%;
      max-width: 500px;
    }

    .form-container h2 {
      color: #007bff;
      margin-bottom: 20px;
    }

    .form-container form {
      display: flex;
      flex-direction: column;
    }

    .form-container form input[type="text"],
    .form-container form input[type="date"],
    .form-container form input[type="time"],
    .form-container form input[type="submit"],
    .form-container form select {
      padding: 10px;
      margin: 5px 0;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .form-container form input[type="submit"] {
      background-color: #007bff;
      color: #fff;
      cursor: pointer;
      border: none;
    }

    .form-container form input[type="submit"]:hover {
      background-color: #0056b3;
    }

    #day_week_container {
      display: none;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h2>Recurring Medication</h2>
    <form action="/addmedication" method="post">
      <input type="text" name="name" id="name" placeholder="Name" required>
      <input type="text" name="description" id="description" placeholder="Description" required>
      <input type="date" name="start_date" id="start_date" required>
      <input type="date" name="end_date" id="end_date" required>
      <input type="time" name="time" id="time" required>
      <select name="rec_type" id="rec_type" required onclick="toggleDayWeekContainer()">
        <option value="daily">Daily</option>
        <option value="weekly">Weekly</option>
      </select>
      <div id="day_week_container">
        <select name="day_week" id="day_week">
          <option value="monday">Monday</option>
          <option value="tuesday">Tuesday</option>
          <option value="wednesday">Wednesday</option>
          <option value="thursday">Thursday</option>
          <option value="friday">Friday</option>
          <option value="saturday">Saturday</option>
          <option value="sunday">Sunday</option>
        </select>
      </div>
      <input type="hidden" name="type" id="type" value="recurring">
      <input type="submit" value="Submit">
    </form>
  </div>

  <script>
    function toggleDayWeekContainer() {
      const recTypeSelect = document.getElementById('rec_type');
      const dayWeekContainer = document.getElementById('day_week_container');

      if (recTypeSelect.value === 'weekly') {
        dayWeekContainer.style.display = 'block';
      } else {
        dayWeekContainer.style.display = 'none';
      }
    }

    // Initialize the form based on the default selected value
    // document.addEventListener('DOMContentLoaded', function() {
    //   toggleDayWeekContainer();
    // });
  </script>
</body>
</html>
